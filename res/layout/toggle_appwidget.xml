<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:layout_marginBottom="@dimen/appwidget_marginVertical"
	android:layout_marginLeft="@dimen/appwidget_marginHorizontal"
	android:layout_marginRight="@dimen/appwidget_marginHorizontal"
	android:layout_marginTop="@dimen/appwidget_marginVertical"
	android:background="@android:color/background_dark"
	android:orientation="horizontal"
	android:padding="@dimen/appwidget_padding" >
	<Button
		android:id="@+id/contraction_toggle_off"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:background="@android:color/background_dark"
		android:drawableBottom="@android:drawable/button_onoff_indicator_off"
		android:drawableTop="@drawable/icon" />
	<Button
		android:id="@+id/contraction_toggle_on"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:background="@android:color/background_dark"
		android:drawableBottom="@android:drawable/button_onoff_indicator_on"
		android:drawableTop="@drawable/icon"
		android:visibility="gone" />
</LinearLayout>