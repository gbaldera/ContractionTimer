<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    style="@style/Card"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/empty_state"
        style="@android:style/TextAppearance.DeviceDefault.Large"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/empty_state"
        android:visibility="invisible"/>

    <GridLayout
        android:id="@+id/current_state"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="3"
        android:useDefaultMargins="true"
        android:visibility="visible">

        <Space/>

        <TextView
            android:layout_gravity="end"
            android:text="@string/list_header_duration"/>

        <TextView
            android:layout_gravity="end"
            android:text="@string/list_header_frequency"/>

        <TextView
            android:id="@+id/current_start_time"
            style="@android:style/TextAppearance.DeviceDefault.Small"
            android:layout_gravity="start"
            android:text="@string/default_time"/>

        <TextView
            android:id="@+id/current_duration"
            android:layout_gravity="end"
            android:text="@string/default__elapsed_time"/>

        <TextView
            android:id="@+id/current_frequency"
            android:layout_gravity="end"
            android:text="@string/default__elapsed_time"/>

        <TextView
            android:id="@+id/previous_start_time"
            style="@android:style/TextAppearance.DeviceDefault.Small"
            android:layout_gravity="start"
            android:text="@string/default_time"/>

        <TextView
            android:id="@+id/previous_duration"
            android:layout_gravity="end"
            android:text="@string/default__elapsed_time"/>

        <TextView
            android:id="@+id/previous_frequency"
            android:layout_gravity="end"
            android:text="@string/default__elapsed_time"/>

        <TextView
            android:layout_gravity="bottom|start"
            android:text="@string/contraction_average"/>

        <TextView
            android:id="@+id/average_duration"
            android:layout_gravity="bottom|end"
            android:fontFamily="sans-serif-condensed"
            android:text="@string/default__elapsed_time"/>

        <TextView
            android:id="@+id/average_frequency"
            android:layout_gravity="bottom|end"
            android:fontFamily="sans-serif-condensed"
            android:text="@string/default__elapsed_time"/>
    </GridLayout>
</FrameLayout>
